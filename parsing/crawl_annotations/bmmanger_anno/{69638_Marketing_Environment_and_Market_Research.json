{
    "text": "Week Two: Marketing environment & Market Research",
    "node": [
        {
            "text": "Marketing Environment",
            "node": [
                {
                    "text": "Micro",
                    "node": [
                        {
                            "text": "Stakeholders",
                            "node": [
                                {
                                    "text": "A stakeholder can be any group or individual who can affect or are affected by the achievement of organisational goals."
                                },
                                {
                                    "text": "3 types",
                                    "node": [
                                        {
                                            "text": "External stakeholders",
                                            "node": [
                                                {
                                                    "text": "e.g. government, pressure groups, community, professional bodies"
                                                }
                                            ]
                                        },
                                        {
                                            "text": "Connected stakeholders",
                                            "node": [
                                                {
                                                    "text": "e.g. shareholders customers, suppliers, bankers"
                                                }
                                            ]
                                        },
                                        {
                                            "text": "Internal stakeholders",
                                            "node": [
                                                {
                                                    "text": "e.g. Staff, managers"
                                                }
                                            ]
                                        }
                                    ]
                                },
                                {
                                    "text": "Four different reactions to stakeholders",
                                    "node": [
                                        {
                                            "text": "Proactive",
                                            "node": [
                                                {
                                                    "text": "address problem before it becomes a problem"
                                                }
                                            ]
                                        },
                                        {
                                            "text": "Reactive",
                                            "node": [
                                                {
                                                    "text": "Ignore until forced"
                                                }
                                            ]
                                        },
                                        {
                                            "text": "Defensive",
                                            "node": [
                                                {
                                                    "text": "block and fight... PR wars, lobbying, courts"
                                                }
                                            ]
                                        },
                                        {
                                            "text": "Accommodate",
                                            "node": [
                                                {
                                                    "text": "accept responsibility and tackle issues"
                                                }
                                            ]
                                        }
                                    ]
                                },
                                {
                                    "text": "Stakeholder communications",
                                    "node": [
                                        {
                                            "text": "What are their information needs?",
                                            "node": [
                                                {
                                                    "text": "Information required/needed"
                                                },
                                                {
                                                    "text": "Level of detail and timing"
                                                },
                                                {
                                                    "text": "What do/don't we want them to know?"
                                                }
                                            ]
                                        },
                                        {
                                            "text": "What are the best channels?",
                                            "node": [
                                                {
                                                    "text": "Meetings, consultations, questionnaires"
                                                },
                                                {
                                                    "text": "Direct- leaflets, newsletters, exhibitions etc"
                                                },
                                                {
                                                    "text": "Indirect... PR, conferences, sponsorships"
                                                }
                                            ]
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                },
                {
                    "text": "Definition of the environment",
                    "node": [
                        {
                            "text": "\"The forces external to the marketing management function of the firm that impinge on the marketing managements ability to develop and maintain successful transactions with its customers\""
                        }
                    ]
                },
                {
                    "text": "Macro",
                    "node": [
                        {
                            "text": "Macro Marketing",
                            "node": [
                                {
                                    "text": "\"The area of study of the nations exchange process, within its own borders, in which political, cultural, social, and economic interactions are examined\""
                                },
                                {
                                    "text": "\"To manage a business well is to manage its future and to manage a future is to manage information\""
                                }
                            ]
                        },
                        {
                            "text": "The Macro Environment",
                            "node": [
                                {
                                    "text": "P.E.S.T.L.E",
                                    "node": [
                                        {
                                            "text": "Political",
                                            "node": [
                                                {
                                                    "text": "\"Laws, government agencies, regulations and pressure groups that influence and limit various organisations in a given society\""
                                                },
                                                {
                                                    "text": "Positive impacts of governmental/ legal factors...",
                                                    "node": [
                                                        {
                                                            "text": "Facilitates desirable social change e.g. equal pay, equal opportunities"
                                                        },
                                                        {
                                                            "text": "Corrects markets i.e. makes sure they are fair and competitive"
                                                        },
                                                        {
                                                            "text": "Encourages further knowledge e.g. research"
                                                        },
                                                        {
                                                            "text": "Reassurance to the public"
                                                        }
                                                    ]
                                                }
                                            ]
                                        },
                                        {
                                            "text": "Economic",
                                            "node": [
                                                {
                                                    "text": "The economic environment consists of factors that affect consumer purchasing power and spending patterns\""
                                                },
                                                {
                                                    "text": "The money cycle",
                                                    "node": [
                                                        {
                                                            "text": "There are injections and leakages to and from the money cycle",
                                                            "node": [
                                                                {
                                                                    "text": "Injections",
                                                                    "node": [
                                                                        {
                                                                            "text": "Investments"
                                                                        },
                                                                        {
                                                                            "text": "Government spending"
                                                                        },
                                                                        {
                                                                            "text": "Exports"
                                                                        }
                                                                    ]
                                                                },
                                                                {
                                                                    "text": "Leakages",
                                                                    "node": [
                                                                        {
                                                                            "text": "Savings"
                                                                        },
                                                                        {
                                                                            "text": "Taxation"
                                                                        },
                                                                        {
                                                                            "text": "Imports"
                                                                        }
                                                                    ]
                                                                }
                                                            ]
                                                        },
                                                        {
                                                            "text": "These injections and leakages affect expenditure and income, and hence the movement of resources and goods for companies."
                                                        }
                                                    ]
                                                },
                                                {
                                                    "text": "International trade",
                                                    "node": [
                                                        {
                                                            "text": "Why is international trade so attractive to domestic firms?",
                                                            "node": [
                                                                {
                                                                    "text": "A global market allows for comparative marketing studies"
                                                                },
                                                                {
                                                                    "text": "International trade allows for more competition and choice for consumers"
                                                                },
                                                                {
                                                                    "text": "World markets allow for economies of scale and cost advantage"
                                                                },
                                                                {
                                                                    "text": "Trade brings contact, cultural understanding and cooperation"
                                                                },
                                                                {
                                                                    "text": "Opening of the tiger economies. Emerging markets in asia."
                                                                }
                                                            ]
                                                        }
                                                    ]
                                                }
                                            ]
                                        },
                                        {
                                            "text": "Social",
                                            "node": [
                                                {
                                                    "text": "Segmentation & Assessment of market potential is related to the analysis of studying human populations in terms of size, density, location, age, sex, race and occupation."
                                                },
                                                {
                                                    "text": "Implications of population trends to the marketer",
                                                    "node": [
                                                        {
                                                            "text": "The aggregate demand for goods and services"
                                                        },
                                                        {
                                                            "text": "The demand in different market segments/regions"
                                                        },
                                                        {
                                                            "text": "The availability of labour"
                                                        },
                                                        {
                                                            "text": "The level of dependents in the population"
                                                        },
                                                        {
                                                            "text": "The living standards"
                                                        }
                                                    ]
                                                }
                                            ]
                                        },
                                        {
                                            "text": "Technical",
                                            "node": [
                                                {
                                                    "text": "Consists of the forces that create new technologies, creating new products and market opportunities."
                                                },
                                                {
                                                    "text": "Technological diffusion process (adoption: slow or fast)",
                                                    "node": [
                                                        {
                                                            "text": "Profitability",
                                                            "node": [
                                                                {
                                                                    "text": "is the new technology worth it?"
                                                                }
                                                            ]
                                                        },
                                                        {
                                                            "text": "Consequences",
                                                            "node": [
                                                                {
                                                                    "text": "of not adopting- impact on business"
                                                                }
                                                            ]
                                                        },
                                                        {
                                                            "text": "Scale of investment",
                                                            "node": [
                                                                {
                                                                    "text": "In both soft and hardware"
                                                                }
                                                            ]
                                                        },
                                                        {
                                                            "text": "Environmental impact",
                                                            "node": [
                                                                {
                                                                    "text": "How green is the technology"
                                                                }
                                                            ]
                                                        },
                                                        {
                                                            "text": "Acceptance of change",
                                                            "node": [
                                                                {
                                                                    "text": "Effect 'how we do things'- to what degree"
                                                                }
                                                            ]
                                                        }
                                                    ]
                                                }
                                            ]
                                        },
                                        {
                                            "text": "Legal"
                                        },
                                        {
                                            "text": "Environmental"
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "text": "Market Research",
            "node": [
                {
                    "text": "Definition",
                    "node": [
                        {
                            "text": "The objective gathering and recording and analysing of all facts about problems relating to the transfer and sales of goods and services from producer to consumer"
                        }
                    ]
                },
                {
                    "text": "Qualitative Research",
                    "node": [
                        {
                            "text": "Exploratory research used to uncover consumer motives, attitudes and behaviour"
                        }
                    ]
                },
                {
                    "text": "Quantitative Research",
                    "node": [
                        {
                            "text": "Research that involves data collection from a sufficient volume of customers to allow for statistical analysis"
                        }
                    ]
                },
                {
                    "text": "Primary Data",
                    "node": [
                        {
                            "text": "Information collected for a specific purpose or issue to be addressed"
                        }
                    ]
                },
                {
                    "text": "Secondary Data",
                    "node": [
                        {
                            "text": "Information that already exists somewhere, having been collected for another purpose"
                        }
                    ]
                },
                {
                    "text": "Research Methodology",
                    "node": [
                        {
                            "text": "Research: Primary or Secondary?",
                            "node": [
                                {
                                    "text": "1. Diagnose the problem (be specific)"
                                },
                                {
                                    "text": "2. Initial investigation",
                                    "node": [
                                        {
                                            "text": "Secondary data sufficient?",
                                            "node": [
                                                {
                                                    "text": "Yes"
                                                },
                                                {
                                                    "text": "No",
                                                    "node": [
                                                        {
                                                            "text": "Use primary data research to fill the gaps"
                                                        }
                                                    ]
                                                }
                                            ]
                                        }
                                    ]
                                },
                                {
                                    "text": "3. Report: conclusions and recommendations"
                                }
                            ]
                        },
                        {
                            "text": "Types of information",
                            "node": [
                                {
                                    "text": "Quantitative Research",
                                    "node": [
                                        {
                                            "text": "Sales history by product, customer, location, order size, distribution, season"
                                        },
                                        {
                                            "text": "£ Market growth, % Growth"
                                        },
                                        {
                                            "text": "Competitor products, prices, advertising spend"
                                        },
                                        {
                                            "text": "Customer number, location, demographics, segment"
                                        }
                                    ]
                                },
                                {
                                    "text": "Qualitative Research",
                                    "node": [
                                        {
                                            "text": "Customer perceptions"
                                        },
                                        {
                                            "text": "Buying behaviour"
                                        },
                                        {
                                            "text": "Attitudes and motivations"
                                        },
                                        {
                                            "text": "Packaging"
                                        },
                                        {
                                            "text": "Brand image/ preferences"
                                        },
                                        {
                                            "text": "Reaction to adverts"
                                        },
                                        {
                                            "text": "External factors"
                                        },
                                        {
                                            "text": "Power of stakeholders"
                                        },
                                        {
                                            "text": "DMU's"
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "text": "Secondary Research",
                            "node": [
                                {
                                    "text": "Internal Desk Research",
                                    "node": [
                                        {
                                            "text": "Sales and marketing data"
                                        },
                                        {
                                            "text": "customer databases, EPOS/loyalty"
                                        },
                                        {
                                            "text": "Production and distribution data"
                                        },
                                        {
                                            "text": "General market intelligence"
                                        },
                                        {
                                            "text": "Previous market reports/data"
                                        },
                                        {
                                            "text": "Free, quick and easy"
                                        }
                                    ]
                                },
                                {
                                    "text": "External Desk Research",
                                    "node": [
                                        {
                                            "text": "Govt stats"
                                        },
                                        {
                                            "text": "Trade/industry reports and media"
                                        },
                                        {
                                            "text": "Competitors- ads, catalogues, exhibitions"
                                        },
                                        {
                                            "text": "Directories/journals"
                                        },
                                        {
                                            "text": "off the shelf reports (mintel, BRAD)"
                                        }
                                    ]
                                },
                                {
                                    "text": "Problems with secondary research",
                                    "node": [
                                        {
                                            "text": "Currency",
                                            "node": [
                                                {
                                                    "text": "often out of date"
                                                }
                                            ]
                                        },
                                        {
                                            "text": "Accuracy",
                                            "node": [
                                                {
                                                    "text": "may be uncertain/doubtful"
                                                }
                                            ]
                                        },
                                        {
                                            "text": "Relevance",
                                            "node": [
                                                {
                                                    "text": "May not quite suit purpose"
                                                }
                                            ]
                                        },
                                        {
                                            "text": "Sufficiency",
                                            "node": [
                                                {
                                                    "text": "often only part of the solution"
                                                }
                                            ]
                                        },
                                        {
                                            "text": "Availability",
                                            "node": [
                                                {
                                                    "text": "may be limited"
                                                }
                                            ]
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "text": "Primary Research",
                            "node": [
                                {
                                    "text": "Experimental/Observation",
                                    "node": [
                                        {
                                            "text": "Lab tests... tastes, colour etc"
                                        },
                                        {
                                            "text": "Product trials... in homes"
                                        },
                                        {
                                            "text": "Product sampling... in store"
                                        },
                                        {
                                            "text": "Test market... new product, advert etc"
                                        },
                                        {
                                            "text": "Hidden cameras... in store cctv"
                                        },
                                        {
                                            "text": "may be time consuming and expensive"
                                        }
                                    ]
                                },
                                {
                                    "text": "Sampling and surveys",
                                    "node": [
                                        {
                                            "text": "Statistical sample of population"
                                        },
                                        {
                                            "text": "may use structured questionnaire"
                                        },
                                        {
                                            "text": "may use semi structured talk guides"
                                        },
                                        {
                                            "text": "Face to face, street, interview, doorstep"
                                        },
                                        {
                                            "text": "Distance...mail, phone, e-mail, fax etc"
                                        },
                                        {
                                            "text": "Good for lots of quantitative data"
                                        }
                                    ]
                                },
                                {
                                    "text": "qualitative methods for primary research",
                                    "node": [
                                        {
                                            "text": "Non statistical methods"
                                        },
                                        {
                                            "text": "Aim for depth not breadth"
                                        },
                                        {
                                            "text": "In depth interviews. One to one."
                                        },
                                        {
                                            "text": "Focus/discussion groups 7-12 people"
                                        },
                                        {
                                            "text": "Projective... \"my mate\""
                                        },
                                        {
                                            "text": "Can be used to add depth to quantitative data"
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}